@model Contact

<div class="sixteen wide column">
    <div class="ui segment">
        <form class="ui form" asp-controller="contact" asp-action="contactform" method="post">
            <h4 class="ui dividing header">İletişim Formu</h4>
            <div class="field">
                <label asp-for="@Model.Name"></label>
                <input asp-for="@Model.Name">
            </div>
            <div class="field">
                <label asp-for="@Model.Surname"></label>
                <input asp-for="@Model.Surname">
            </div>
            <div class="field">
                <label asp-for="@Model.Email"></label>
                <input asp-for="@Model.Email">
            </div>
            <div class="field">
                <label asp-for="@Model.Phone"></label>
                <input asp-for="@Model.Phone">
            </div>
            <button class="ui button" type="submit">Gönder</button>
        </form>
    </div>
</div>